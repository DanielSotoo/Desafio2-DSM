<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:importantForAutofill="no"
            android:textColor="#FF000000"
            android:textColorHint="#8A000000"
            android:hint="@string/hint_dish_name" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:importantForAutofill="no"
            android:textColor="#FF000000"
            android:textColorHint="#8A000000"
            android:hint="@string/hint_dish_description" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:importantForAutofill="no"
            android:textColor="#FF000000"
            android:textColorHint="#8A000000"
            android:hint="@string/hint_dish_price" />

        <EditText
            android:id="@+id/etImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:inputType="text"
            android:importantForAutofill="no"
            android:textColor="#FF000000"
            android:textColorHint="#8A000000"
            android:hint="@string/hint_dish_image" />

        <EditText
            android:id="@+id/etStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:inputType="number"
            android:importantForAutofill="no"
            android:textColor="#FF000000"
            android:textColorHint="#8A000000"
            android:hint="@string/hint_dish_stock" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:text="@string/btn_save" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:layout_marginEnd="8dp" />
    </LinearLayout>
</ScrollView>
